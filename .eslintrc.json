{
  "env": {
    "react-native/react-native": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "16.4.2"
    },
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  },
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended",
    "plugin:react-native/all"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react-native", "prettier", "flowtype"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "singleQuote": true,
        "printWidth": 120,
        "trailingComma": "es5"
      }
    ],
    "react/prop-types": [0, {}],
    "no-console": "off",
    "no-debugger": "off",
    "react-native/no-color-literals": 0
  }
}
